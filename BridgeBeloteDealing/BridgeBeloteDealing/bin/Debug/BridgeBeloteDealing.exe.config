<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
  <appSettings>
    <!-- true - сортиране по цвят (J 9 A 10 ...), false - безкозово сортиране (A 10 K Q ...) -->
    <add key="SortBySuit" value="true" />
    <!-- Допускаме ли карета: true - да, false - не -->
    <add key="Allow4OfAKind" value="true" />
    <!-- Максимален брой последователни карти. 0 - няма ограничения, 3 - няма да допускаме 50, 100 и по-дълги последователности, 4 - няма да допускаме 100 и по-дълги последователности -->
    <add key="MaxSequenceLength" value="0" />
  </appSettings>
</configuration>